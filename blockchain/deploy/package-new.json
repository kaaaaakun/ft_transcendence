{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Blockchain deployment service using Hardhat for Sepolia testnet",
  "main": "hardhat.config.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "test": "hardhat test",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "contract:validate": "node scripts/contract-validator.js validate",
    "contract:info": "node scripts/contract-validator.js info",
    "contract:generate": "node scripts/contract-validator.js generate",
    "contract:compile-json": "node -e \"const ContractManager = require('./scripts/contract-manager'); new ContractManager().compileAndUpdateJson('MyContract');\""
  },
  "keywords": ["blockchain", "ethereum", "hardhat", "solidity", "smart-contracts"],
  "author": "42Tokyo Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "dotenv": "^16.5.0",
    "hardhat": "^2.24.1"
  }
}
