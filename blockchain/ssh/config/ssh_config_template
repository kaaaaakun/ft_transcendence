# SSH Configuration Template for Blockchain Environment
# This template will be used to generate SSH configuration

# Blockchain Development Server
Host blockchain-dev
    HostName ${BLOCKCHAIN_DEV_HOST}
    User ${BLOCKCHAIN_DEV_USER}
    Port ${BLOCKCHAIN_DEV_PORT}
    IdentityFile ${BLOCKCHAIN_DEV_KEY_PATH}
    IdentitiesOnly yes
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Blockchain Staging Server
Host blockchain-staging
    HostName ${BLOCKCHAIN_STAGING_HOST}
    User ${BLOCKCHAIN_STAGING_USER}
    Port ${BLOCKCHAIN_STAGING_PORT}
    IdentityFile ${BLOCKCHAIN_STAGING_KEY_PATH}
    IdentitiesOnly yes
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Blockchain Production Server
Host blockchain-prod
    HostName ${BLOCKCHAIN_PROD_HOST}
    User ${BLOCKCHAIN_PROD_USER}
    Port ${BLOCKCHAIN_PROD_PORT}
    IdentityFile ${BLOCKCHAIN_PROD_KEY_PATH}
    IdentitiesOnly yes
    ServerAliveInterval 60
    ServerAliveCountMax 3

# Blockchain Deployment Server (Generic)
Host blockchain-deploy
    HostName ${BLOCKCHAIN_DEPLOY_HOST}
    User ${BLOCKCHAIN_DEPLOY_USER}
    Port ${BLOCKCHAIN_DEPLOY_PORT}
    IdentityFile ${BLOCKCHAIN_DEPLOY_KEY_PATH}
    IdentitiesOnly yes
    ServerAliveInterval 60
    ServerAliveCountMax 3